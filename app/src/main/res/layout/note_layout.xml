<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="7dp"
        android:layout_height="50dp"
        android:background="#ff5722"
        android:id="@+id/linearLayoutMark"
        android:orientation="horizontal"></LinearLayout>
    <ImageView
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:id="@+id/imgAttach1"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/notimg"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"/>
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:id="@+id/linearLayout2"
        android:layout_toRightOf="@+id/linearLayoutMark"
        android:orientation="vertical"
        android:weightSum="3">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:id="@+id/tvDay"
            android:gravity="center"
            android:text="Mon"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/tvMonth"
            android:text="11"
            android:gravity="center"
            android:layout_weight="1"
            android:textStyle="bold"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:id="@+id/tvTime"
            android:text="09:54"
            android:layout_weight="1"
            android:gravity="center"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:text="Title"
        android:textSize="24sp"
        android:textColor="#d50000"
        android:layout_toRightOf="@+id/linearLayout2"
        android:layout_marginLeft="5dp"
        android:layout_toLeftOf="@+id/imgAttach"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/tvContent"
        android:layout_below="@+id/tvTitle"
        android:layout_toRightOf="@+id/linearLayout2"
        android:layout_toLeftOf="@+id/imgAttach"
        android:text="Hello world, My name is Ken Hoang. I am a student from HueIC, NiceTo"
        android:textSize="14sp"
        android:layout_marginLeft="5dp"/>


</RelativeLayout>











